.about
	&-list
		margin -5px -5px 20px
		.about-item
			display inline-block
			vertical-align top
			width 33.3%
			margin 0 -6px 0 0
			padding 5px
		&[data-clearwhitespace="cleared"]
			.about-item
				margin-right 0
		+MEDIA("DESKTOP")
			.about-item
				width 50%
		+MEDIA("TABLET")
			.about-item
				display block
				width auto
				margin-right 0
	&-item
		&-inner
			display block
			position relative
			z-index 0
			&:before
				content ''
				display block
				padding-top 68%
		&-image
			overflow hidden
			position absolute
			z-index 0
			pos 0
			img
				position absolute
				pos -1000px
				margin auto
				max-size none
				size 100% auto
				&[data-cover-image="not-fill"]
					size auto 100%
			&:before,
			&:after
				content ''
				position absolute
				pos 0
				z-index 1
				transition opacity TRANS_SPEED
			&:before
				background images('elements/about-item-shadow.png') center bottom repeat
				background-size cover
		&-content
			color #fff
			display table
			margin auto
			width 100%
			&-wrapper
				position absolute
				pos _ 0 0
			&-inner
				display table-cell
				vertical-align middle
				padding 25px 30px
		&-title
			font-size 20px
			line-height 30px
			font-weight 900
			text-transform uppercase
		&-text
			display none
			margin-top 35px
			&,
			p
				font-size 16px
				line-height 30px
			p
				margin 0
			* + p
				margin-top 30px
		&-inner:hover &
			&-image
				&:before
					opacity 0
				&:after
					opacity 1
		&-inner.__open
			z-index 1
		&-inner.__open &
			&-image
				&:before
					opacity 0
				&:after
					opacity 1
			&-text
				display block
			&-content
				position absolute
				pos 0
				size 100%
				background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkmAcAAKQAoJgx3+MAAAAASUVORK5CYII=')
				&-wrapper
					pos 0
				&-inner
					padding _ 25%

		+MIN_MEDIA("WIDE_DESKTOP")
			&:nth-child(3n + 1) &-inner.__open &
				&-image,
				&-content-wrapper
					right -200%
					margin-right -20px
			&:nth-child(3n + 2) &-inner.__open &
				&-image,
				&-content-wrapper
					left -100%
					right -100%
					margin-right -10px
					margin-left -10px
			&:nth-child(3n + 3) &-inner.__open &
				&-image,
				&-content-wrapper
					left -200%
					right 0
					margin-right 0
					margin-left -20px

		+MEDIA("DESKTOP", true)
			&:nth-child(odd) &-inner.__open &,
			&.__odd &-inner.__open &
				&-image,
				&-content-wrapper
					right -100%
					margin-right -10px
			&:nth-child(even) &-inner.__open &,
			&.__even &-inner.__open &
				&-image,
				&-content-wrapper
					left -100%
					margin-left -10px
		+MEDIA("SMALL_DESKTOP", true)
			&:nth-child(odd) &-inner.__open &,
			&.__odd &-inner.__open &
				&-image,
				&-content-wrapper
					right -100%
					margin-right -10px
			&:nth-child(even) &-inner.__open &,
			&.__even &-inner.__open &
				&-image,
				&-content-wrapper
					left -100%
					margin-left -10px

		+MEDIA("TABLET")
			&-inner.__open .about-item-content-inner
				padding _ 10%
	+MEDIA("SMALL_PHONE")
		&-list
			margin _ 0
		&-item,
		&-list &-item,
		&-list[data-clearwhitespace="cleared"] &-item
			margin _ -(WRAPPER_PADDING_PHONE)
			padding 1px 0