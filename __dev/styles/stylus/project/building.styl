			display none
		&-button
			margin _ -30px
			[data-button]
				display block
				width 100%
	+MEDIA("SMALL_PHONE")
		&-content
			margin _ -10px
		&-info
			&-inner
				padding _ 20px 0
		&-button
			margin _ -20px
		&-image
			height 310px
			overflow hidden
			img
				position absolute
				pos _ -1000px
				margin auto
				max-size none
				size auto 100%