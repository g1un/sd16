	&-floor
		display table
		width 100%
		// background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkKAIAAHgAdO2k22kAAAAASUVORK5CYII=') center repeat; /* #000000 0.45 */
		background getColor('base')
		color #fff
		& ~ &
			margin-top 2px
		&-cell
			display table-cell
			text-align right
			font-size 14px
			font-weight 700
			line-height 20px
			padding 20px 0
			&:first-child
				text-align left
				padding-left 20px
		&-item
			display inline-block
			vertical-align middle
			width 25%
			margin-left -6px
			padding _ 5px
			text-align center
			font-size 16px
			white-space nowrap
			span
				display inline-block
				vertical-align middle
			._type
				font-size 14px
				line-height 16px
				text-align center
				padding 3px 0
				size 22px
				background #fff
				color #006298
				font-weight 300
				margin-right 3px
				border-radius 50%
			._empty
				font-weight 300
				opacity 0.7
		&.__sold &-item
			width 100%


	+MEDIA("TABLET")
		&-content
			margin _ -20px
		&-image,
		&-info
			float none
			width auto
			padding 0
		&-image
			display none
			&:before
				display none
			img
				position static
