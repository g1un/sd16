.share
	&-label,
	&-links
		display inline-block
		vertical-align middle
	&-label
		font-size 16px
		line-height 20px
		color #242424
		width 100px
	&-links
		padding-left 115px
		margin-left -110px
		width 100%
	&.__minimizable
		white-space nowrap
		background #e7f0f7
		.share
			&-label
				padding 29px 20px
				width auto
				background #e7f0f7
				color #252324
				&:before,
				span
					display inline-block
					vertical-align middle
				&:before
					content ''
					size 29px 21px
					background images('icons/share.png') center no-repeat
					margin-right 10px
				&:hover
					background #e7f0f7 - 10%
					color #252324
				&:active
					background #e7f0f7 - 10%
					color #252324
					opacity 0.8
			&-links
				display none
				padding-left 0
				margin-left 0
				padding-right 20px
				width auto
		&.__open .share
			&-links
				display inline-block
	+MEDIA("PHONE")
		&-label,
		&-links
			display block
		&-label
			width auto
			margin-bottom 10px
		&-links
			padding-left 0
			margin-left 0