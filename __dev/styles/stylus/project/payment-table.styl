.payment-table
	display table
	width 100%
	&-row
		display table-row
	&-cell
		display table-cell
		vertical-align top
		font-size 16px
		line-height 18px
		padding 15px 10px
		.small
			font-size 12px
			line-height 18px
		ul,
		li
			margin 0
		* + ul
			margin-top 18px
		li
			&:before
				margin-top -1px
	&-toggle
		display none
	&-breaker
		display none
	+MIN_MEDIA("DESKTOP")
		&-row:first-of-type &-cell
			padding-top 30px
		&-row:last-of-type &-cell
			padding-bottom 30px
		&-row ~ &-row &-cell
			border-top 1px dotted getColor('light')
		&-cell
			&.__text
				width 20%
			&.__documents
				width 200px
			&.__first
				padding-left 25px
			&.__last
				padding-right 25px
	+MEDIA("SMALL_DESKTOP")
		display block
		&-row
			display block
			clear()
			padding 10px 0
			&.__head
				display none
		&-cell
			display inline-block
			vertical-align middle
			margin-right -6px
			padding 10px 20px
			&.__percent,
			&.__time,
			&.__pay,
			&.__text,
			&.__documents
				&:before
					display block
					content attr(data-label)
					font-size 12px
					line-height 14px
					margin-bottom 5px
					color #777
			&.__info,
			&.__documents
				vertical-align top
				width 50%
		&-row ~ &-row
			border-top 1px dotted getColor('light')
	+MEDIA("TABLET")
		&-row
			position relative
			z-index 0
			margin _ -20px
			padding _ 36px _ 20px
		&-toggle
			display block
			position absolute
			pos 0
			z-index 1
			&:after
				position absolute
				top 36px
				right 20px
				size 16px 10px
				background images('elements/select-arrow.png') 0 -10px no-repeat
				content ''
				display block
		&-cell
			a
				position relative
				z-index 2
			&.__bank
				width 190px
				padding-left 0
			&.__percent
				width 110px
			&.__time
				width 120px
			&.__info,
			&.__documents
				display none
			&.__pay + .payment-table-breaker
				display block
		&-row.__open &-toggle
			background-position 0 0
		&-row.__open &-cell
			display inline-block
	+MEDIA("TABLET")
		&-cell
			&.__pay
				display none
	+MEDIA("PHONE")
		&-cell
			padding _ 10px
			&.__time
				display none
	+MEDIA("SMALL_PHONE")
		&-row
			padding 20px _
			padding _ 26px _ 10px
			margin _ 0
		&-cell
			&.__bank
				width 160px
			&.__info,
			&.__documents
				width 100%