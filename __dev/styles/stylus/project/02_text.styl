h1Size = (48px)
h2Size = (36px)
h3Size = (30px)
h4Size = (24px)
h5Size = (20px)
h6Size = (18px)

main
	+$title()
		line-height 1
		resetTitle()
		font-weight 900
		color #242424
		margin-bottom (30px)
		small
			font-weight 400
	+$h1()
		font-size h1Size
	+$h2()
		font-size h2Size
	+$h3()
		font-size h3Size
	+$h4()
		font-size h4Size
	+$h5()
		font-size h5Size
	+$h6()
		font-size h6Size
		text-transform uppercase
		font-weight 400

	+MEDIA("TABLET")
		+$h1()
			font-size h1Size*0.75
		+$h2()
			font-size h2Size*0.75
		+$h3()
			font-size h3Size*0.75
		+$h4()
			font-size h4Size*0.75
		+$h5()
			font-size h5Size*0.75
		+$h6()
			font-size h6Size*0.75
	// +MEDIA("SMALL_PHONE")
	// 	+$title()
	// 		margin-bottom (20px)
	// 	+$h1()
	// 		font-size h1Size*0.5
	// 	+$h2()
	// 		font-size h2Size*0.5
	// 	+$h3()
	// 		font-size h3Size*0.5
	// 	+$h4()
	// 		font-size h4Size*0.5
