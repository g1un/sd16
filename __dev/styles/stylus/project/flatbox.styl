.flatbox
	&-inner
		background #fff
	&-image ~ &-content
		border-top 2px solid #f5f5f5
	&-content
		padding 25px
	&-image
		position relative
		display block
		a&
			&:hover
				opacity 0.7
		&:before
			padding-top 115%
			content ''
			display block
		img
			position absolute
			pos 0
			margin auto
			max-size 90%
	&-detail
		display table
		width 100%
		overflow hidden
		font-size 12px
		font-weight 700
		line-height 14px
		&-row
			display table-row
		&-cell
			display table-cell
			vertical-align top
			padding 8px 0
			> span
				background #fff
			& ~ &
				text-align right
				padding-left 10px

			&:first-child
				& > span
					padding-right 5px
				&:before
					float left
					content "________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________"
					white-space nowrap
					width 0
					letter-spacing -5px
					margin-top -1px
					color getColor('light') - 10%

	&-more
		margin-top 20px
		font-size 18px
		line-height 24px
		font-weight 900
		&-link
			text-transform uppercase