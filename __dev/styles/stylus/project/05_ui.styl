.slick-arrow.__aside
	pos 0 auto
	amrgin auto
	size 55px
	&,
	&:hover,
	&:active
		background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkSJpRDwAC3wF7WF8SLgAAAABJRU5ErkJggg==') center repeat; /* #006298 0.5 */
