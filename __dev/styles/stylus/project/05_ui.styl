.ui-widget
	font-family inherit
.ui-selectmenu-button span.ui-selectmenu-text
	resetStyle()
.ui-selectmenu-button
	resetStyle()
.ui-corner-all, .ui-corner-bottom, .ui-corner-right, .ui-corner-br
	border-radius 0


.slick-arrow
	position absolute
	pos 0 10px 0 auto
	margin auto
	size 79px
	reset-button()
	z-index 1
	color #fff
	trans()
	background getColor('base')
	&:after
		content ''
		position absolute
		size 22px 42px
		background images('elements/slider-arrows.png') 0 0 no-repeat
		margin auto
		pos 0
	&:hover
		background getColor('base') + 10%
	&:active
		background getColor('base') + 10%
		opacity 0.8
	&[aria-disabled="true"]
		opacity 0.5
		background getColor('base')
		cursor default

.slick-prev
	bottom -(79px + 10px)
	&:after
		background-position 0 0
.slick-next
	top -(79px + 10px)
	&:after
		background-position -22px 0
